{
  "name": "@yukemuri/plugin-email",
  "version": "1.0.0",
  "description": "Email plugin for Yukemuri - Send emails via SMTP, SendGrid, or Mailgun",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts"
  },
  "keywords": [
    "yukemuri",
    "plugin",
    "email",
    "smtp",
    "sendgrid",
    "mailgun",
    "mailer"
  ],
  "author": "Yukemuri Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "mailgun.js": "^9.1.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@yukemuri/core": "workspace:*",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "peerDependencies": {
    "@yukemuri/core": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yukemuri": "^1.0.0"
  }
}
