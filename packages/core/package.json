{
  "name": "@yukemuri/core",
  "version": "0.1.0",
  "description": "Core framework for Yukemuri",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "bin": {
    "yukemuri": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo 'No tests in core package'",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^3.9.0",
    "@hono/node-server": "^1.2.0",
    "drizzle-orm": "^0.29.0",
    "@libsql/client": "^0.4.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "framework",
    "hono",
    "cloudflare",
    "edge",
    "pwa"
  ],
  "license": "MIT"
}